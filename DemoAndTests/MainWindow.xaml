<Window x:Class="DemoAndTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoAndTests"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Background="#FFADADAD">
  <Grid>
    <Canvas HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="774">
      <Image x:Name="Img" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Canvas.Left="0" Canvas.Top="0">
        <Image.RenderTransform><ScaleTransform ScaleX="0.6" ScaleY="0.6" x:Name="Scale"></ScaleTransform></Image.RenderTransform>
      </Image>
    </Canvas>
    <Button Content="Button" HorizontalAlignment="Left" Margin="81,41,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
  </Grid>
</Window>
