<Window x:Class="DemoAndTests.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoAndTests"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
    <Canvas HorizontalAlignment="Stretch" Margin="0" VerticalAlignment="Stretch">
      <Image x:Name="Img" Canvas.Left="0" Canvas.Top="0">
        <Image.RenderTransform>
          <ScaleTransform x:Name="Scale"></ScaleTransform>
        </Image.RenderTransform>
      </Image>
    </Canvas>
    </Grid>
</Window>
